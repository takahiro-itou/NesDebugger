<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ApplicationManifest>My Project\app.manifest</ApplicationManifest>
    <MyType>WindowsForms</MyType>
    <OutputType>WinExe</OutputType>
    <Platforms>x64;Win32</Platforms>
    <RootNamespace>ViewVb</RootNamespace>
    <StartupObject>ViewVb.My.MyApplication</StartupObject>
    <TargetFrameworks>
      net48;
    </TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <Import Project="..\Props\OutputApps.props" />

  <ItemGroup>
    <Import Include="System.Data" />
    <Import Include="System.Drawing" />
    <Import Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net48' ">
    <ProjectReference Include="..\Cli.NetFramework4.8\Wrapper.Net48.vcxproj" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\WinFormsControl\WinFormsControl.NetOld.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="My Project\Application.Designer.vb">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Application.myapp</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="My Project\Application.myapp">
      <Generator>MyApplicationCodeGenerator</Generator>
      <LastGenOutput>Application.Designer.vb</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
